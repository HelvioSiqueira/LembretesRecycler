<?xml version="1.0" encoding="utf-8"?>

<!--Esse layout será o item de uma lista contendo um quadrado(view personalizada)
    de uma cor que será igual ao textView que estará do lado dele. A ideia desse
    layout é servir de fragment para a selecão de cor das respectivas prioridades
    de item da lista-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.lembretesrecycler.QuadradoView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:corDoQuadrado="@color/purple_500"/>


</LinearLayout>